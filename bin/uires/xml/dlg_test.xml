<?xml version="1.0" encoding="utf-8"?>
<SOUI name="mainWindow" title="@string/about" bigIcon="ICON_LOGO:32" smallIcon="ICON_LOGO:16" margin="5,5,5,5"  resizable="1" wndType="normal"
translucent="1"
>
  <root skin="_skin.sys.wnd.bkgnd" cache="1"  width="400" height="300">
    <caption pos="0,0,-0,30" show="1" font="adding:0">
      <icon pos="10,8" src="ICON_LOGO:16"/>
      <text pos="29,9">@string/about</text>
      <imgbtn id="IDCANCEL" skin="_skin.sys.btn.close"    pos="-45,0" tip="close" animate="1"/>
    </caption>
    <window pos="5,[2,-5,-5">
      <window layout="vbox" interval="10" gravity="left" size="-2,-2" padding="10,20,10,10">
        <text layout_gravity="center" font="style:StrokeAndFill,blurStyle:solid,blurRadius:3,size:30">Welcome to SOUI4！</text>
        <text multiLines="1">Soui is a open source direct ui library</text>
        <window size="-2,-1" layout="hbox" interval="5">
          <text>can be free used in</text>
          <text colorText="@color/red">non commecial</text>
          <text> projects!</text>
        </window>
        
        <text>Copy right：setoutsoft@qq.com</text>
        <window size="-2,-1" layout="gridlayout" interval="10" columnCount="2" gravity="fill" extend_top="40">
          <text >github：</text>
          <edit readOnly="1" margin="1" colorBorder="@color/red" ncSkin="">https://github.com/soui4/soui</edit>
          <text>gitee：</text>
          <edit readOnly="1" margin="1" colorBorder="@color/red" ncSkin="">https://gitee.com/setousoft/soui4</edit>
        </window>
      </window>
    </window>
  </root>
</SOUI>